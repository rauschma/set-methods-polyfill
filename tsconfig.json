{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "ES2022",
    "strict": true,
    "noImplicitOverride": true,
    "importsNotUsedAsValues": "error",
    //
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source
  }
}
